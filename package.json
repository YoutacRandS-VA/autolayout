{
	"name": "@lume/autolayout",
	"version": "0.8.2",
	"homepage": "https://github.com/lume/autolayout",
	"repository": {
		"type": "git",
		"url": "git://github.com/lume/autolayout.git"
	},
	"main": "es/AutoLayout.js",
	"types": "es/AutoLayout.d.ts",
	"type": "module",
	"description": "Apple's Auto Layout and Visual Format Language for javascript (using cassowary constraints)",
	"keywords": [
		"autolayout",
		"autolayoutjs",
		"autolayout.js",
		"auto-layout",
		"cassowary",
		"cassowaryjs",
		"cassowary.js",
		"vfl",
		"evfl",
		"visualformatlanguage"
	],
	"license": "MIT",
	"readmeFilename": "README.md",
	"bugs": {
		"url": "https://github.com/lume/autolayout/issues"
	},
	"engines": {
		"node": ">= 0.10.0"
	},
	"files": [
		"src",
		"lib",
		"es",
		"LICENSE"
	],
	"devDependencies": {
		"babel-eslint": "^7.1.1",
		"babel-preset-es2015": "^6.18.0",
		"babelify": "^7.3.0",
		"benchmark": "^2.1.3",
		"browserify": "^13.3.0",
		"chai": "^3.5.0",
		"combined-stream": "^1.0.5",
		"envify": "^4.0.0",
		"esperanto": "^0.7.5",
		"grunt": "~0.4.1",
		"grunt-cli": "^0.1.0",
		"grunt-contrib-concat": "^1.0.1",
		"grunt-jsdoc-to-markdown": "^2.0.0",
		"grunt-peg": "1.5.0",
		"istanbul": "^0.4.5",
		"lodash": "^4.17.4",
		"minifyify": "^7.3.4",
		"minimist": "^1.2.0",
		"mocha": "^9.0.0",
		"platform": "^1.3.1",
		"prettier": "^2.3.0",
		"rimraf": "^3.0.2",
		"rollup": "1.17.0",
		"rollup-plugin-uglify": "6.0.2",
		"typescript": "4.4.3"
	},
	"dependencies": {
		"@lume/kiwi": "^0.3.2"
	},
	"scripts": {
		"build": "npm run clean && tsc && rollup -c",
		"clean": "rimraf lib/ es/ tmp/",
		"build:parser": "rimraf 'src/parser/*.js' && npm run grunt -- parser",
		"test": "npm run lint && mocha",
		"cov": "istanbul cover ./node_modules/mocha/bin/_mocha --report lcovonly -R",
		"bench": "node bench/main.cjs",
		"format": "prettier . --write --ignore-path .gitignore",
		"lint": "prettier . --check",
		"doc": "npm run grunt -- doc && node scripts/docs-update-headings.js && prettier docs/AutoLayout.md --write",
		"prepare": "npm run build",
		"grunt": "grunt --gruntfile Gruntfile.cjs",
		"release:patch": "npm run build && npm test && npm version patch --message 'v%s' && npm publish && git push --follow-tags",
		"release:minor": "npm run build && npm test && npm version minor --message 'v%s' && npm publish && git push --follow-tags",
		"release:major": "npm run build && npm test && npm version major --message 'v%s' && npm publish && git push --follow-tags"
	}
}
